{
  "name": "neolearn-brand-demo",
  "version": "1.0.0",
  "private": true,
  "description": "NeoLearn Institute branding demo â€” static Bootstrap site with SCSS and theme toggle",
  "scripts": {
    "watch": "sass --style=expanded --source-map src/scss/main.scss assets/css/styles.css",
    "watch:dev": "sass --watch --style=expanded --source-map src/scss/main.scss assets/css/styles.css",
    "build": "sass --no-source-map --style=compressed src/scss/main.scss assets/css/styles.css",
    "serve": "live-server --port=3000 --host=127.0.0.1 --open=index.html",
    "dev": "concurrently \"npm:watch:dev\" \"npm:serve\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2",
    "sass": "^1.77.5"
  }
}
